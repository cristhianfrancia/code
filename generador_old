    <!-- Resultado -->
    <div class="output">
      <strong>Resultado:</strong><br>
      <div id="resultadoTexto">Resultado aparecer√° aqu√≠...</div>
    </div>

    <!-- Botones -->
    <div class="button-group">
      <button class="copiar-btn" id="copiarBtn" onclick="copiarResultado()">üìã Copiar</button>
      <button class="limpiar-btn" onclick="limpiarCampos()">üßπ Limpiar</button>
      <button class="mas-opciones-btn" onclick="toggleOpciones()">‚öôÔ∏è M√°s opciones</button>
      <div class="opciones-extra" id="opcionesExtra" style="display:none;">
        <button onclick="toggleHistorial()">üìÇ Historial</button>
        <button onclick="exportarHistorial()">‚¨áÔ∏è Exportar</button>
        <button onclick="borrarHistorial()">üóëÔ∏è Borrar</button>
      </div>
    </div>

    <div id="historial"></div>

  </div>

<script>
    const HIST_KEY = 'historialResultados';

    const inputs = [
      'numero', 'consulta', 'respuesta', 'id',
      'direccion', 'referencia', 'departamento', 'provincia', 'distrito'
    ];

    let historial = [];

    function cargarInicial() {
      const guardado = localStorage.getItem(HIST_KEY);
      historial = guardado ? JSON.parse(guardado) : [];
      actualizarHistorial();
      updateOutput();
    }
    window.addEventListener('load', cargarInicial);

    inputs.forEach(id => {
      const el = document.getElementById(id);
      if (el) el.addEventListener('input', updateOutput);
    });

    function plantillaSeleccionada() {
      const select = document.getElementById('plantilla');
      return select ? select.value : 'comentario';
    }

    function cambiarPlantilla() {
      const modo = plantillaSeleccionada();
      const cmt = document.getElementById('plantillaComentario');
      const cal = document.getElementById('plantillaCalidad');

      if (modo === 'comentario') {
        cmt.style.display = 'flex';
        cal.style.display = 'none';
      } else {
        cmt.style.display = 'none';
        cal.style.display = 'flex';
      }
      updateOutput();
    }

    function updateOutput() {
      const modo = plantillaSeleccionada();
      let resultado = '';

      if (modo === 'comentario') {
        const numero = (document.getElementById('numero').value || '').trim();
        const consulta = (document.getElementById('consulta').value || '').trim();
        const respuesta = (document.getElementById('respuesta').value || '').trim();
        const id = (document.getElementById('id').value || '').trim();

        resultado = (numero || consulta || respuesta || id)
          ? `${numero} // ${consulta} // ${respuesta} // $$_${id}_&&`
          : '';
      } else {
        const direccion   = (document.getElementById('direccion').value || '').trim();
        const referencia  = (document.getElementById('referencia').value || '').trim();
        const departamento= (document.getElementById('departamento').value || '').trim();
        const provincia   = (document.getElementById('provincia').value || '').trim();
        const distrito    = (document.getElementById('distrito').value || '').trim();

        if (direccion || referencia || departamento || provincia || distrito) {
          resultado = `${direccion}, ${referencia}, ${departamento} - ${provincia} - ${distrito}`;
        } else {
          resultado = '';
        }
      }

      document.getElementById('resultadoTexto').innerText =
        resultado || 'Resultado aparecer√° aqu√≠...';
    }

    function showCopyFeedback(success, button) {
      const originalText = button.dataset.original || button.innerText;
      const successText = '‚úÖ Copiado!';
      const errorText = '‚ùå Error';
      const noContentText = '‚ÑπÔ∏è Nada';

      if (success === 'noContent') {
        button.innerText = noContentText;
        button.classList.add('copied');
        setTimeout(() => {
          button.innerText = originalText;
          button.classList.remove('copied');
        }, 1500);
        return;
      }
      button.innerText = success ? successText : errorText;
      button.classList.add('copied');
      setTimeout(() => {
        button.innerText = originalText;
        button.classList.remove('copied');
      }, 1500);
    }

    function copiarResultado() {
      const resultado = document.getElementById('resultadoTexto').innerText;
      const copyButton = document.getElementById('copiarBtn');

      if (!resultado || resultado === 'Resultado aparecer√° aqu√≠...') {
        showCopyFeedback('noContent', copyButton);
        return;
      }

      const fecha = new Date().toLocaleDateString('es-PE');
      historial.push({ texto: resultado, fecha });
      guardarHistorial();

      if (navigator.clipboard) {
        navigator.clipboard.writeText(resultado)
          .then(() => showCopyFeedback(true, copyButton))
          .catch(() => copiarConFallback(resultado, copyButton));
      } else {
        copiarConFallback(resultado, copyButton);
      }
    }

    function copiarConFallback(texto, button) {
      const area = document.createElement('textarea');
      area.value = texto;
      document.body.appendChild(area);
      area.select();
      try {
        document.execCommand('copy');
        showCopyFeedback(true, button);
      } catch (err) {
        showCopyFeedback(false, button);
      }
      document.body.removeChild(area);
    }

    function limpiarCampos() {
      inputs.forEach(id => {
        const el = document.getElementById(id);
        if (el) el.value = '';
      });
      document.getElementById('resultadoTexto').innerText = 'Resultado aparecer√° aqu√≠...';
    }

    function validarNumero(input) {
      input.value = input.value.replace(/[^0-9]/g, '');
    }

    function toggleOpciones() {
      const extra = document.getElementById('opcionesExtra');
      const historialDiv = document.getElementById('historial');
      const boton = document.querySelector('.mas-opciones-btn');

      if (extra.style.display === 'none' || extra.style.display === '') {
        extra.style.display = 'flex';
        boton.textContent = "‚èπ Ocultar opciones";
      } else {
        extra.style.display = 'none';
        historialDiv.style.display = 'none';
        boton.textContent = "‚öôÔ∏è M√°s opciones";
      }
    }

    function toggleHistorial() {
      const historialDiv = document.getElementById('historial');
      historialDiv.style.display =
        (historialDiv.style.display === 'none' || historialDiv.style.display === '') ? 'block' : 'none';
    }

    function actualizarHistorial() {
      const historialDiv = document.getElementById('historial');
      historialDiv.innerHTML = '';

      const aviso = document.createElement('div');
      aviso.className = 'historial-aviso';
      aviso.textContent = "‚ö†Ô∏è El historial es temporal y no 100% seguro; no olvides tipificar todas tus llamadas en l√≠nea.";
      historialDiv.appendChild(aviso);

      const grupos = {};
      historial.forEach(item => {
        if (!grupos[item.fecha]) grupos[item.fecha] = [];
        grupos[item.fecha].push(item);
      });

      Object.keys(grupos).reverse().forEach(fecha => {
        const fechaDiv = document.createElement('div');
        fechaDiv.className = 'historial-fecha';
        fechaDiv.textContent = `üìÖ ${fecha}`;
        historialDiv.appendChild(fechaDiv);

        grupos[fecha].slice().reverse().forEach(item => {
          const div = document.createElement('div');
          div.className = 'historial-item';

          const textoSpan = document.createElement('div');
          textoSpan.className = 'historial-texto';
          textoSpan.textContent = item.texto;

          const botonCopiar = document.createElement('button');
          botonCopiar.className = 'historial-copy-btn';
          botonCopiar.textContent = 'üìã Copiar';
          botonCopiar.dataset.original = 'üìã Copiar';
          botonCopiar.onclick = () => copiarDelHistorial(item.texto, botonCopiar, div);

          div.appendChild(textoSpan);
          div.appendChild(botonCopiar);
          historialDiv.appendChild(div);
        });
      });
    }

    function copiarDelHistorial(texto, boton, divItem) {
      if (navigator.clipboard) {
        navigator.clipboard.writeText(texto)
          .then(() => { showCopyFeedback(true, boton); resaltarItem(divItem); })
          .catch(() => { copiarConFallback(texto, boton); resaltarItem(divItem); });
      } else {
        copiarConFallback(texto, boton); resaltarItem(divItem);
      }
    }

    function resaltarItem(divItem) {
      divItem.classList.add('highlight');
      setTimeout(() => divItem.classList.remove('highlight'), 1000);
    }

    function borrarHistorial() {
      if (!confirm('¬øSeguro que deseas borrar todo el historial?')) return;
      historial = [];
      guardarHistorial();
    }

    function exportarHistorial() {
      if (!historial.length) {
        alert('No hay historial para exportar.');
        return;
      }
      const grupos = {};
      historial.forEach(h => {
        if (!grupos[h.fecha]) grupos[h.fecha] = [];
        grupos[h.fecha].push(h.texto);
      });

      let textoPlano = '(El historial es temporal y no 100% seguro, no olvides tipificar todas tus llamadas en l√≠nea)\n\n';
      Object.keys(grupos).reverse().forEach(fecha => {
        textoPlano += `üìÖ ${fecha}\n\n`;
        textoPlano += grupos[fecha].slice().reverse().join('\n') + '\n\n';
      });

      const blob = new Blob([textoPlano], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'historial.txt';
      a.click();
      URL.revokeObjectURL(url);
    }

    function guardarHistorial() {
      localStorage.setItem(HIST_KEY, JSON.stringify(historial));
      actualizarHistorial();
    }
  </script>
</body>
</html>
